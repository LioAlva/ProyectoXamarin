<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PModelo.Pages.MenuPage"
             Title="Menú"
             Icon="icon.png"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             >
   

        <StackLayout Orientation="Vertical">

            <Label  FontSize="Medium" HorizontalOptions="Center" TextColor="White"  />

            <!--<StackLayout 
                 HeightRequest="150">-->
            <Grid HeightRequest="150">
                <Image Source="addPark.png" Aspect="AspectFill" />
                <StackLayout Padding="0,20,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Image  Source="icon.png" Aspect="AspectFill" WidthRequest="85" HeightRequest="85" />
                    <Label Text="Adam Pedley" TextColor="White" FontSize="Large" />
                </StackLayout>
            </Grid>
            <!--<Label Text=""
             FontSize="20"
             VerticalOptions="CenterAndExpand"
             TextColor="White"
             HorizontalOptions="Center"/>-->
            <!--</StackLayout>-->
            <ListView 
                    ItemsSource="{Binding Menu}"
                    HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateCommand}"/>
                                </Grid.GestureRecognizers>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image 
              Source="{Binding Icon}"
              WidthRequest="55"
              HeightRequest="55"/>
                                <Label 
              Grid.Column="1"
              VerticalOptions="Center"
              FontAttributes="Bold"
              Text="{Binding Title}"
              TextColor="Black"
              />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        
